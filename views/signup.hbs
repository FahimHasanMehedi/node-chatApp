<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Chat app | Sign in</title>

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet" />

        <link rel="stylesheet" href="css/styles.css" />
    </head>
    <body>
        <div class="auth-layout neo-shadow-up">
            <header class="auth-header">
                <h1 class="heading-primary">chatApp</h1>
                <div class="error-prompt"></div>
            </header>
            <section class="auth-section-one">
                <h2 class="heading-secondary">Sign up</h2>
                <form class="auth-form" action="/signup" method="post">
                    <div>
                        <label class="input-label">Username</label>
                        <input
                            class="input-field neo-shadow-down"
                            name="username"
                            type="text"
                            placeholder="ex: JohnDoe"
                            autocomplete="off"
                            required
                        />
                    </div>
                    <div>
                        <label class="input-label">Email</label>
                        <input
                            class="input-field neo-shadow-down"
                            name="email"
                            type="text"
                            placeholder="example@email.com"
                            autocomplete="off"
                            required
                        />
                    </div>
                    <div>
                        <label class="input-label">Password</label>
                        <input
                            class="input-field neo-shadow-down"
                            name="password"
                            type="password"
                            placeholder="********"
                            autocomplete="off"
                            required
                        />
                    </div>

                    <input class="button neo-shadow-up input-submit" type="submit" value="Sign up" />
                    <p class="auth-prompt">
                        Have an account already?
                        <a class="button neo-shadow-up" href="./login">Sign in</a>
                    </p>
                </form>
            </section>
        </div>
    </body>
</html>